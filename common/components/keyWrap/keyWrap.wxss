/* components/common/mobildValidate/mobileValidate.wxss */
button::after {
  border: none;
}

.mask {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 100000000;
  background-color: white
}

.mask image{
  width: 100%;
  filter: blur(5px);
  position: absolute;
  left: 0;
  top: 0;
}

.box {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 630rpx;
  background: rgba(0,0,0,.6);
  border-radius: 10rpx;
}


.mask .content{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
  padding: 60rpx 0;
}

.mask .content view input{
  width: 100%;
  height: 40rpx;
  margin-top: 20rpx;
  padding-left: 10rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px solid rgb(220,220,220);
  color: white
}

.mask .content textarea{
  margin-top: 30rpx;
  height: 200rpx;
  padding-top: 20rpx;
  padding-left: 20rpx;
  border: 1px solid rgb(220,220,220)
}

.button-wrap{
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 100rpx;
}

.button-wrap button {
  width: 40%;
  height: 60rpx;
  margin-left: 30%;
  border-radius: 0px 0px 0rpx 0rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid white;
  background-color: transparent;
  /* background-color: rgba(55, 163, 75, 1); */
  color: white
}

