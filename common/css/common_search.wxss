.common-search {
  width: 80%;
  margin-left: 10%;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  height: 62rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 62rpx;
  background-color: white;
  border: 1px solid #999;
  box-sizing: border-box;
  padding: 0 35rpx;
}

.common-search image {
  width: 35rpx;
}

.common-search input {
  width: 60%;
  margin-left: 27rpx;
  font-size: 24rpx;
  color: #999;
}
