.common-form {
  width: 100%;
}

.form-title {
  width: 100%;
  height: 64rpx;
  font-size: 26rpx;
  color: #bbb;
  text-align: center;
  line-height: 74rpx;
  background-color: #f2f2f2;
}

.form-content {
  width: 92%;
  margin-left: 4%;
}

.form-line {
  margin-top: 32rpx;
  position: relative;
}

.form-line .form-input {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  position: relative;
  padding: 0rpx 26rpx;
  border-radius: 4rpx;
  font-size: 28rpx;
  color: #999;
  border: 1px solid #ccc;
}

.form-line .form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.form-one-submit {
  width: 100%;
  height: 80rpx;
  border-radius: 8rpx;
  color: white;
  font-size: 32rpx;
  background-color: #4885fa;
  margin-top: 50rpx;
  line-height: 80rpx;
}

/* create-departure */

.form-part {
  width: 100%;
  padding-left: 4%;
  padding-right: 4%;
  box-sizing: border-box;
  padding-bottom: 30rpx;
  border-bottom: 20rpx solid #f2f2f2;
}

.last-part {
  border-bottom: none;
}

.form-short-wrap {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 32rpx;
  justify-content: space-between;
}

.form-short-line {
  width: 43.47%;
}

.form-short-line .form-input {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  position: relative;
  padding: 0rpx 26rpx;
  border-radius: 4rpx;
  font-size: 28rpx;
  color: #999;
  border: 1px solid #ccc;
}


.form-short-line .form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}
.label-desc{
  font-size: 22rpx;
  color: #cccccc;
  margin-left: 20rpx;
}

.form-line .form-textarea {
  height: 150rpx;
}
