
.share-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  border-top: 10rpx solid #f2f2f2
}
.share-wrap:nth-child(2) {
  border-top: 2rpx solid #f2f2f2
}
.share-wrap .title{
  position: absolute;
  top: 70rpx;
  left: 57rpx;
  font-size: 32rpx;
  color: #333333
}
.share-wrap image{
  width: 30%;
  margin-top:155rpx;
}
.wx-share {
  width: 200rpx;
  height: 60rpx;
  border-radius: 60rpx;
  text-align: center;
  line-height: 60rpx;
  background-color: #4885fa;
  font-size: 32rpx;
  color: white;
  margin-top: 55rpx;
  margin-bottom: 55rpx;
}

.copy-text {
  width: 80%;
  text-align: center;
  margin-top: 168rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: bold
}

.copy-desc{
  font-size: 28rpx;
  color: #666666;
  margin-top:146rpx;
}
