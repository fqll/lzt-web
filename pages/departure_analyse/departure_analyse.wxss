@import '/common/css/normal.wxss';
@import '../../common/components/inputModal/inputModal.wxss';
.canvas-wrap{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
}
.canvas-wrap text{
  width: 100%;
  font-size: 28rpx;
  color: rgb(57,57,57);
  text-align: center;
  display: block;
  position: absolute;
  top:0rpx;
}
.canvas-column{
  width: 90%;
  white-space: nowrap;
  margin-left: 5%;
  margin-top: 20rpx;
  display: flex;
  justify-content: center; 
  align-items: center
}
.hide-this{
  display: none !important
}

.table-view{
  width: 90%;
  margin-left: 5%;
  margin-top: 30rpx;
  color:rgb(102, 102, 102);
  font-size: 24rpx;
  border: 1px solid rgb(215,215,215);
  border-bottom: none;
}
.table-view .head{
  font-size: 24rpx;
  color:black
}
.table-view .head,.table-view .content{
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid rgb(215,215,215)
}
.table-view .head view{
  background-color: rgb(246,246,246)
}
.table-view .head view,.table-view .content view{
  width: 33%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-right: 1px solid rgb(215,215,215)
}
.table-view .head view:last-child,.table-view .content view:last-child{
  width: 33%;
  border-right: none
}
.fix-all{
  position: fixed;
  z-index: 2147483647
}

#columnCanvas{
  width: 800rpx !important;
}

