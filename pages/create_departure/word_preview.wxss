/* 预览弹窗 */

.preview-wrap {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 10000;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.preview-wrap .content {
  width: 80%;
  padding: 40rpx;
  background-color: white;
  border-radius: 20rpx;
}

.word-title {
  width: 100%;
  display: block;
  text-align: center;
  font-size: 48rpx;
  color: rgb(37, 37, 37);
  font-weight: bold;
}

.word-content {
  width: 100%;
  height: 400rpx;
  margin-top: 50rpx;
}

.word-content .char-padding {
  display: inline-block;
  margin-left: 40rpx;
}

.word-content view {
  width: 100%;
  line-height: 55rpx;
  word-break: break-all;
}

.word-content text {
  display: block;
  line-height: 55rpx;
}

.right-align {
  text-align: right;
  margin-top: 20rpx;
}

.word-wrap image {
  width: 30%;
  margin-top: 40rpx;
  display: inline-block;
  float: right;
}

.prove {
  margin-top: 20rpx;
}

.right-time {
  margin-right: 40rpx;
}

.preview-btn {
  width: 80%;
  height: 66rpx;
  line-height: 65rpx;
  margin-left: 10%;
  margin-top: 40rpx;
  font-size: 26rpx;
  color: white;
  border: 1px solid #2f88e0;
  border-radius: 3px;
  background-color: #3296fa;
}

.preview-close{
  width: 200rpx;
}