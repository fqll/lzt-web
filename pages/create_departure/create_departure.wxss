@import '/common/css/normal.wxss';
@import '/common/css/common_form.wxss';
@import './word_preview.wxss';

.save-red{
  width: 30rpx;
  position: absolute;
  right: 0;
  top:0;
}

.create-form-btns{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
}

.create-form-btns button {
  height: 80rpx;
  line-height:  80rpx;
  text-align: center;
  margin-right: 14rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 0;
  position: relative
}

.save-box, .save-submit{
  width: 148rpx;
  border: 2rpx solid #4885fa;
  background-color: white;
  color: #4885fa;

}

.create-form-btns .form-create-submit{
  width: 300rpx;
  border: none;
  background-color:#4885fa;
  color:white;
  margin-right: 0;

}


.scroll-people {
  width: 100%;
  white-space: nowrap;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.people-row {
  width: fit-content;
  height: 100%;
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  align-items: center;
}

.people-section {
  height: auto !important;
  padding: 20rpx 0;
}

.people-row .add {
  width: 90rpx;
}

.each-part{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.arrow {
  width: 24rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.each-circle {
  position: relative;
  width: 90rpx;
  height: 90rpx;
  border-radius: 6rpx;
  line-height: 90rpx;
  color: white;
  background-color: #2a3a49;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
}

.each-circle text {
  font-size: 24rpx;
  /* width: 80rpx; */
  white-space: normal;
  word-wrap: break-word;
  word-break: normal;
}

.del-img {
  width: 50rpx;
  position: absolute;
  right: -20rpx;
  top: -20rpx;
}
.audit-line{
  width: 100%;
  border-bottom: 1px solid #ccc;
  margin-top: 32rpx;
}
