@import '/common/css/normal.wxss';
.top-line{
  width: 100%;
  height: 13rpx;
  background-color: #f2f2f2
}
.company-title{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1.5px solid #eeeeee;
  position: relative
}
.company-title image{
  width: 40rpx;
  margin-left: 60rpx;
}
.company-title text{
  font-size: 32rpx;
  color: 444444;
  font-weight: bold;
  margin-left: 20rpx;
}
.company-title button {
  width: 150rpx;
  height: 55rpx;
  border-radius: 55rpx;
  border: 1.5px solid #4885fa;
  color: #999999;
  font-size: 24rpx;
  text-align: center;
  line-height: 55rpx;
  box-sizing:  content-box;
  background-color: white;
  font-weight: bold;
  margin: 0;
  position: absolute;
  right: 60rpx;
}
.tool-wrap{
  width: 100%;
  padding: 40rpx 0rpx;
}
.tool-wrap .row{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 56rpx;
  position: relative
}
.tool-wrap .row .tool-view{
  width: 36%;
  height: 290rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 0px 9.8px 0.2px rgba(56,95,171,.17);
  margin-right: 56rpx;
}
.tool-wrap .row .tool-view:last-child{
  margin-right: 0
}
.tool-wrap text:nth-child(2) {
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.tool-wrap text:nth-child(3), .tool-wrap text:nth-child(4) {
  color: #838383;
  font-size: 20rpx;
}

.tool-wrap .tool-logo{
  width: 100%
}

.logo-wrap{
  width: 90rpx;
  margin-bottom: 30rpx;
  position: relative
}

.red-logo{
  width: 40rpx;
  position: absolute;
  top: -10rpx;
  right: -10rpx;
}

.tool-btn{
  position: fixed;
  width: 124rpx;
  right: 50rpx;
  bottom: 50rpx;
  z-index: 1
}
.tool-btn view{
  width: 100%;
  height: 60rpx;
  background-color: rgba(102, 102, 102, 1);
  border-radius: 56rpx;
  font-size: 26rpx;
  color: white;
  text-align: center;
  line-height: 60rpx;
  margin-bottom: 30rpx;
}
.tool-btn view:last-child{
  margin-bottom: 0
}
.draft-box{
  position: absolute;
  top:0;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  /* background-color: rgb(220,220,235); */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center
}
.draft-box text{
  line-height: normal;
  font-size: 20rpx;
}
.draft-box image{
  width: 60%;
}
.red-circle {
  width: 15rpx;
  height: 15rpx;
  border-radius: 15rpx;
  line-height: 15rpx;
  position: absolute;
  top:15%;
  left: 22%;
  background-color: rgb(255,59,47);
  color: white;
  text-align: center
}
.tool-wrap .normal-red {
  left: auto;
  right: 10%
}

.blue-line{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 25rpx;
  background-color: #4885fa
}

/* guide相关 */
.tool-highlight{
  z-index: 10000;
  background-color: white !important;
  position: relative
}