@import '/common/css/normal.wxss';
.reject-wrap{
  border-top:  13rpx solid#f2f2f2;
  width: 100%;
  padding: 0 4%;
  box-sizing: border-box
}
.notice{
  color: #333333;
  font-size: 30rpx;
  padding: 28rpx 0;
  display: block;
}
textarea{
  width: 100%;
  height: 170rpx;
  box-sizing: border-box;
  border-radius: 4rpx;
  border:1px solid rgba(228, 228, 228, 1);
  font-size: 24rpx;
  color: #999999;
  padding: 15rpx 27rpx;
}
button{
  width: 100%;
  height: 80rpx;
  border-radius: 8rpx;
  text-align: center;
  line-height: 80rpx;
  margin-top: 38rpx;
  font-size: 32rpx;
  color:white;
  background-color: #4885fa
}