.action-wrap .contact {
  width: 140rpx;
  margin-left: 40rpx;
  background-color: rgba(69, 170, 48, 1);
  color: white;
}

.basic-input-form .share-form {
  width: 100%;
  margin-top: 40rpx;
  margin-left: 0;
}

.form-btn-submit {
  width: 80%;
  height: 66rpx;
  line-height: 65rpx;
  margin-left: 10%;
  margin-top: 40rpx;
  font-size: 26rpx;
  color: white;
  border: 1px solid #2f88e0;
  border-radius: 3px;
  background-color: #3296fa;
}

.btn-bottom-wrap {
  width: 116%;
  margin-left: -8%;
  display: flex;
  flex-direction: row;
  margin-top: 80rpx;
  justify-content: space-between;
}

.btn-bottom-wrap button {
  width: 30%;
  text-align: center;
  height: 50rpx;
  line-height: 48rpx;
  font-size: 26rpx;
  color: rgb(37, 37, 37);
  background-color: white;
  border: 1px solid rgba(37, 37, 37, 0.3);
  border-radius: 50rpx;
}

.top-some {
  margin-top: 80rpx;
}

.flex-display {
  width: 100%;
  margin-top: 40rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid rgb(37, 37, 37);
  justify-content: space-between;
}

.focus-btn {
  border: 1px solid rgb(150, 150, 150);
  border-radius: 6rpx;
  background: none;
  font-size: 24rpx;
  padding: 2rpx 10rpx;
  margin-right: 0;
  color: rgb(150, 150, 150);
  display: inline;
}

.highlight {
  position: relative;
  z-index: 10001;
}

.wx-section{
  height: auto !important;
}


.wx-share-wrap{
  height: 70rpx;
  position: relative
}
.wx-section picker{
  margin-top: 10rpx;
  padding-bottom: 20rpx;
}

.wx-share{
  padding: 10rpx 20rpx;
  background-color: #4885fa;
  color: white;
  font-size: 24rpx;
  position: absolute;
  left: 0
}