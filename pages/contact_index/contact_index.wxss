@import '/common/css/common_search.wxss';
.search-wrap{
  width: 90%;
  height: 60rpx;
  margin-left: 5%;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 10rpx;
  font-size: 24rpx;
  color:#999999;
  background-color: rgba(246, 246, 246, 1);
  box-sizing: border-box;
  padding: 0 3%;
  margin-bottom: 20rpx;
}
.search-wrap image{
  width: 30rpx;
}
.search-wrap input{
  width:60%;
  margin-left: 30rpx;
}
.none-wrap{
  width: 100%;
  margin-top: 80rpx;
  font-size: 29rpx;
  color: #999999;
  display: flex;
  flex-direction: column;
  align-items: center
}
.none-wrap text{
  text-align: center;
  display: block
}
.none-wrap .link-text{
  width: auto;
  display: inline-block;
  color: #4885fa;
  padding-bottom: 5rpx;
  border-bottom: 1px solid #4885fa;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 20rpx;
}
.list{
  width: 90%;
  margin-left: 5%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid rgba(228, 228, 228, 1);
  padding: 0 10rpx;
  box-sizing: border-box
}
.list text{
  font-size: 24rpx;
}
.list view{
  background-color: rgba(75, 192, 101, 1);
  height: 34rpx;
  line-height: 34rpx;
  padding: 0 10rpx;
  font-size: 24rpx;
  color:white
}