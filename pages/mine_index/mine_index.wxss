.each-enter{
  width: 90%;
  margin-left: 5%;
  border-top: 1px solid rgba(228, 228, 228, 1);
  border-bottom: 1px solid rgba(228, 228, 228, 1);
  line-height: 60rpx;
  font-size: 30rpx;
  text-align: center;
  margin-top: 40rpx;
}
.tool-btn{
  position: fixed;
  width: 124rpx;
  right: 50rpx;
  bottom: 50rpx;
  z-index: 1
}
.tool-btn view{
  width: 100%;
  height: 60rpx;
  background-color: rgba(102, 102, 102, 1);
  border-radius: 56rpx;
  font-size: 26rpx;
  color: white;
  text-align: center;
  line-height: 60rpx;
}
.tool-btn view:first-child{
  margin-bottom: 30rpx;
}